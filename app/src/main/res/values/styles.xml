<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/base_color</item>
        <item name="colorPrimaryDark">@color/base_color</item>
        <item name="colorAccent">@color/base_color</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="home_style_movie_list_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">12</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/common_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
